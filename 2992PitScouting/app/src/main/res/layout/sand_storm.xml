<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/sandStartingGamePiece"
        android:layout_width="254dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorButtonNormal"
        android:entries="@array/cargo_hatch"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Switch
        android:id="@+id/sandCargoRock3Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rocket 3"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/sandCargoRock2Btn"
        app:layout_constraintTop_toBottomOf="@+id/sandCargoRock2Btn" />

    <Switch
        android:id="@+id/sandCargoRock2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rocket 2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/sandCargoRock1Btn"
        app:layout_constraintTop_toBottomOf="@+id/sandCargoRock1Btn" />

    <Switch
        android:id="@+id/sandCargoRock1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Rocket 1"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/sandCargoCSBtn"
        app:layout_constraintTop_toTopOf="@+id/sandCargoCSBtn" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:fontFamily="sans-serif-thin"
        android:text="Cargo Scoring During Sandstorm"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buddyClimbText" />

    <Switch
        android:id="@+id/sandCargoCSBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="CargoShip"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <Switch
        android:id="@+id/sandHatchRock2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rocket 2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/sandHatchRock1Btn"
        app:layout_constraintTop_toBottomOf="@+id/sandHatchRock1Btn" />

    <Switch
        android:id="@+id/sandHatchRock3Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Rocket 3"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/sandHatchRock2Btn"
        app:layout_constraintTop_toBottomOf="@+id/sandHatchRock2Btn" />

    <Switch
        android:id="@+id/sandHatchRock1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Rocket 1"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/sandHatchCSBtn"
        app:layout_constraintTop_toTopOf="@+id/sandHatchCSBtn" />

    <Spinner
        android:id="@+id/sandStartingPlat"
        android:layout_width="254dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorButtonNormal"
        android:entries="@array/starting_platform_strings"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soloClimbText" />

    <Spinner
        android:id="@+id/sandOperation"
        android:layout_width="254dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorButtonNormal"
        android:entries="@array/sandstorm_operation"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buddyClimbText" />

    <TextView
        android:id="@+id/soloClimbText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="sans-serif-thin"
        android:text="Preferred Starting Platform"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buddyClimbText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-thin"
        android:text="Sandstorm Operation Method"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sandStartingPlat" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="sans-serif-thin"
        android:text="Hatch Scoring During Sandstorm"
        android:textAlignment="textStart"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buddyClimbText" />

    <Switch
        android:id="@+id/sandHatchCSBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="CargoShip"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:fontFamily="sans-serif-thin"
        android:text="Preferred Starting Game Piece"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-thin"
        android:text="Max Game Pieces Scored"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sandStartingGamePiece" />

    <EditText
        android:id="@+id/sandGamePiecesScored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


</android.support.constraint.ConstraintLayout>